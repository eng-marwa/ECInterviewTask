<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/_8sdp"
    android:layout_marginVertical="@dimen/_5sdp"
    android:background="@drawable/curved_white"
    android:padding="@dimen/_5sdp">

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/ivCompetitionEmblem"
        android:layout_width="@dimen/_50sdp"
        android:layout_height="@dimen/_50sdp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:shapeAppearanceOverlay="@style/ShapeAppearanceOverlay.App.roundedImageView"
        tools:src="@mipmap/ic_launcher" />

    <TextView
        android:id="@+id/tvCompetitionType"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="start|center_vertical"
        android:padding="@dimen/_3sdp"
        app:layout_constraintEnd_toStartOf="@+id/ivCompetitionEmblem"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Name: Africa Cup of Nations" />

    <TextView
        android:id="@+id/tvCompetitionPlan"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="start|center_vertical"
        android:padding="@dimen/_3sdp"
        app:layout_constraintEnd_toStartOf="@+id/ivCompetitionEmblem"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvCompetitionType"
        tools:text="Area: Africa" />

</androidx.constraintlayout.widget.ConstraintLayout>